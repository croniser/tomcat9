{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build All",
      "dependsOn": [
        "Docker: Build Image",
        "Docker: Tag Image",
        "Docker: Push Image"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Build Image",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/docker-build.sh",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Run Container",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/docker-run.sh",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Tag Image",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/docker-tag.sh",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Push Image",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/docker-push.sh",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
